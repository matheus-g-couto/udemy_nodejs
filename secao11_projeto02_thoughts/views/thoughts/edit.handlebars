<div class="thought-form-container">
    <a href="/thoughts/dashboard">Voltar</a>

    <h1>Editando um pensamento:</h1>
    <form action="/thoughts/update" method="POST">
        <input type="hidden" name="id" value="{{ thought.id }}">
        <div class="form-control">
            <label for="title">Título</label>
            <input type="text" name="title" placeholder="O que você está pensando?" value="{{ thought.title }}">
        </div>

        <input type="submit" value="Editar pensamento">
    </form>
</div>