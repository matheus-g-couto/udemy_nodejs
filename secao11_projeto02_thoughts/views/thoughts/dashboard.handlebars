<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Criar pensamento</a>
    </div>

    <h3>Seus pensamentos</h3>

    <ul>
        {{#each thoughts}}
            <li>
                <span class="thought-label">{{ this.title }}</span>
                <span class="actions">
                    <a href="/thoughts/edit/{{ this.id }}" class="btn">Editar</a>
                    <form action="/thoughts/delete" method="POST">
                        <input type="hidden" name="id" value="{{ this.id }}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>

    {{#if emptyThoughts}}
        <p>Você ainda não teve nenhum pensamento, comece clicando <a href="/thoughts/add">aqui!</a></p>
    {{/if}}
</div>